    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: scheduler with Kubernetes",
            "type": "python",
            "request": "launch",
            "module": "swagger_server",
            "cwd": "${workspaceFolder}/services/scheduler",
            "env": {
                "MYSQL_ROOT_PASSWORD": "secret"
            },
            "preLaunchTask": "bridge-to-kubernetes.service"
        },
        {
            "name": "Flask: public",
            "type": "python",
            "request": "launch",
            "module": "swagger_server",
            "cwd": "${workspaceFolder}/services/public",
            "env": {
                "MYSQL_ROOT_PASSWORD": "secret",
                "MYSQL_URL": "127.0.0.1"
            }
        },
        {
            "name": "Flask: crawler",
            "type": "python",
            "request": "launch",
            "module": "swagger_server",
            "cwd": "${workspaceFolder}/services/crawler",
            "env": {
                "MYSQL_ROOT_PASSWORD": "secret",
                "MYSQL_URL": "127.0.0.1",
                "VCS_DATA_DIR": "/home/matz/Projects/temp"
            }
        },
        {
            "name": "Flask: scheduler",
            "type": "python",
            "request": "launch",
            "module": "swagger_server",
            "cwd": "${workspaceFolder}/services/scheduler",
            "env": {
                "MYSQL_ROOT_PASSWORD": "secret",
                "MYSQL_URL": "127.0.0.1"
            }
        },
        {
            "name": "Flask: linux-agent",
            "type": "python",
            "request": "launch",
            "module": "swagger_server",
            "cwd": "${workspaceFolder}/services/linux-agent",
            "env": {
                "MYSQL_ROOT_PASSWORD": "secret",
                "MYSQL_URL": "127.0.0.1",
                "VCS_DATA_DIR": "/home/matz/Projects/temp"
            }
        }
    ]
}